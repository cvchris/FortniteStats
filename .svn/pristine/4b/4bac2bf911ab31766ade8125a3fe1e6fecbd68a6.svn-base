<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FortniteStats"
             x:Class="FortniteStats.MainPage"
             Title="FortniteStats">

    <!--<StackLayout>

        
    </StackLayout>-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
    
        <StackLayout Grid.Row="0">
            <Entry x:Name="username" Placeholder="username"/>
            <Button Clicked="Button_Clicked"/>
            <Label x:Name="ID"/>
        </StackLayout>
        <StackLayout Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Column="0">
                    <Label Text="Recent Searches" HorizontalOptions="Center"/>
                    <ListView x:Name="recentSearchesList">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding list}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
                <StackLayout Grid.Column="1">
                    <Label Text="Favorites" HorizontalOptions="Center"/>
                    <ListView x:Name="FavoritesList">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding list}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>

            </Grid>
            
        </StackLayout>
    </Grid>
</ContentPage>
